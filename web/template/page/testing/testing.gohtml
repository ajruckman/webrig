<body>
<button class="rigButton">Rig button</button>

<input class="rigInput" style="width: 20em" type="text">

<select style="width: 7em" name="Select1" class="rigSelect">
    {{ range $v := .sampleSelectData }}
        <option value="{{$v}}">{{$v}}</option>
    {{ end }}
</select>

